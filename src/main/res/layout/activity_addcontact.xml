<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="MENU of AddContact CryptoIP!"
        android:id="@+id/textviewAddContact"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Add Contact"
        android:id="@+id/buttonAddContact"
        android:layout_above="@+id/buttonExitAddContact"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/edittextAddContact"
        android:hint="contact Alias"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textviewAddContact"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="EXIT"
        android:id="@+id/buttonExitAddContact"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp" />


</RelativeLayout>